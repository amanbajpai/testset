<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_black_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.lotview.app.views.custom_view.StyledTextViewBold
                android:id="@+id/tv_stock_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp">

            <com.lotview.app.views.custom_view.StyledTextViewRegular
                android:id="@+id/tv_vin_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:maxLines="1"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_12sdp" />

            <com.lotview.app.views.custom_view.StyledTextViewRegular
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp">

            <com.lotview.app.views.custom_view.StyledTextViewMedium
                android:id="@+id/assigned_at_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_13sdp" />


            <com.lotview.app.views.custom_view.StyledTextViewMedium
                android:id="@+id/availability_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp">

            <com.lotview.app.views.custom_view.StyledTextViewMedium
                android:id="@+id/requested_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_13sdp" />


            <com.lotview.app.views.custom_view.StyledTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>