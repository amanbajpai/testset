<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5sdp">

                <com.keykeeper.app.views.custom_view.StyledTextViewBold
                    android:id="@+id/tv_asset_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMW CAR"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <com.keykeeper.app.views.custom_view.StyledTextViewRegular
                    android:id="@+id/tv_vin_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_asset_name"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/dark_gray_color"
                    android:textSize="@dimen/_14sdp" />

                <com.keykeeper.app.views.custom_view.StyledTextViewRegular
                    android:id="@+id/tv_assigned_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_vin_number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/dark_gray_color"
                    android:textSize="@dimen/_14sdp" />

                <com.keykeeper.app.views.custom_view.StyledTextViewRegular
                    android:id="@+id/tv_remaining_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_assigned_at"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/dark_gray_color"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>