<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lotview.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name="com.lotview.app.application.KeyKeepApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.lotview.app.views.activity.SplashActivity"
            android:noHistory="true"
            android:theme="@style/NoActionbarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lotview.app.views.activity.login.LoginActivity"
            android:theme="@style/NoActionbarTheme" />

        <activity
            android:name="com.lotview.app.views.activity.forgot_password.ForgotPasswordActivity"
            android:theme="@style/NoActionbarTheme" />

        <activity
            android:name="com.lotview.app.views.activity.home.HomeActivity"
            android:theme="@style/NoActionbarTheme" />

        <activity android:name="com.lotview.app.views.activity.changepassword.ChangePasswordActivity" />
        <activity android:name="com.lotview.app.views.activity.transfer.TransferActivity" />
        <activity android:name="com.lotview.app.views.activity.AssetListActivity" />
        <activity android:name="com.lotview.app.qrcodescanner.QrCodeActivity" />
        <activity android:name="com.lotview.app.views.activity.assetDetail.AssetDetailActivity" />


        <!--Firebase configuration-->
        <service android:name=".firebase.firebase.DeleteTokenService" />

        <service android:name=".firebase.firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".firebase.firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0b2a50fa30c096f0b61aae2622ab361081013c2f" />

    </application>
</manifest>